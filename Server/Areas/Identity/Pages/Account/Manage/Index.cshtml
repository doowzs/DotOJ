@page
@model IndexModel
@{
    ViewData["Title"] = "个人信息";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ContestantId"></label>
                <input asp-for="ContestantId" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.ContestantName"></label>
                <input asp-for="Input.ContestantName" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">保存</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}